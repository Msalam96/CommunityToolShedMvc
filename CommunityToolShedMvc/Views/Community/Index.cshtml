@model CommunityToolShedMvc.Models.Community

@{
    ViewBag.Title = "Index";
}

<h2 class="text-center">@Model.CommunityName</h2>
<h3 class="text-center">Owned by: @Model.OwnerName</h3>

<h3>Community Toolbox 🧰</h3>

<div style="width: 40%">
    <table class="table table-striped table-bordered table-hover table-sm">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Item</th>
                <th scope="col">Usage</th>
                <th scope="col">Warning</th>
                <th scope="col">Age</th>
            </tr>
        </thead>
        @foreach (var item in Model.Tools)
        {
            <tr>
                <td scope="col">@item.OwnerName's @item.ItemName</td>
                <td scope="col">@item.Usage</td>
                <td scope="col">@item.Warning</td>
                <td scope="col">@item.Age</td>
            </tr>
        }
    </table>
    @Html.ActionLink("ADD A ITEM", "Create", "Tool", new { communityid = Model.Id }, null)
</div>


